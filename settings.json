{
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
      {
        "before": ["j", "j"],
        "after": ["<Esc>"]
      }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["<C-n>"],
        "commands": [":nohl"]
      },
      {
        "before": ["Tab"],
        "commands": ["workbench.action.nextEditor"]
      },
      {
        "before": ["Shift+Tab"],
        "commands": ["workbench.action.previousEditor"]
      },
      {
        "before": ["K"],
        "commands": ["editor.action.showHover"]
      },
      {
        "before": ["<leader>", "c"],
        "commands": ["workbench.action.closeActiveEditor"]
      }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
      "<C-a>": false,
      "<C-f>": false
    },
    "telemetry.telemetryLevel": "off",
    "workbench.iconTheme": "vscode-icons",
    "workbench.editor.enablePreview": false,
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.detectIndentation": false,
    "blade.format.enable": true,
    "explorer.confirmDelete": false,
    "[jsonc]": {
      "editor.tabSize": 2,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[blade]": {
      "editor.tabSize": 4,
      "editor.defaultFormatter": "onecentlin.laravel-blade"
    },
    "[javascript]": {
      "editor.tabSize": 2,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.jsxSingleQuote": true,
    "prettier.tabWidth": 2,
    "prettier.singleQuote": true,
    "prettier.useEditorConfig": false,
    // "intelephense.diagnostics.undefinedMethods": false,
    "[javascriptreact]": {
      "editor.tabSize": 2,
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "emmet.includeLanguages": {
      "javascript": "javascriptreact"
    },
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
      "editor.defaultFormatter": "octref.vetur",
      "editor.tabSize": 2
    },
    "[php]": {
      "editor.tabSize": 4
    },
    "[cpp]": {
      "editor.tabSize": 4
    },
    "editor.fontLigatures": true,
    "editor.lineNumbers": "relative",
    "window.dialogStyle": "custom",
    "window.titleBarStyle": "custom",
    "workbench.sideBar.location": "right",
    "editor.cursorStyle": "line",
    "editor.insertSpaces": true,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.fontFamily": "FiraCode NF",
    "editor.fontSize": 16,
    "editor.fontWeight": 400,
    "workbench.startupEditor": "none",
    "vsicons.dontShowNewVersionMessage": true,
    "[html]": {
      "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[typescriptreact]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.quoteStyle": "single",
    "javascript.preferences.quoteStyle": "single",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "workbench.colorTheme": "Atom One Dark",

    // Disable bracket colors
    // Enables/Disables the coloring of the brackets themselves
    "editor.bracketPairColorization.enabled": false, 

    // Enables/Disables the highlighting of the bracket-pair guides
    "editor.guides.highlightActiveBracketPair": false,
    "editor.guides.highlightActiveIndentation": false,

    // Enables/Disables the Coloring of the bracket-pair guides.
    "editor.guides.bracketPairs": false,
  }
  